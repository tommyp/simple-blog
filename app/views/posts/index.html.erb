<div class="posts">
  <% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>

    <p>
      <%= post.body %>
    </p>
  </div>

    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</div>


<%= link_to 'New Post', new_post_path %>
