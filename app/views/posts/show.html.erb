<p id="notice"><%= notice %></p>


<div class="post">
    <h2><%= @post.title %></h2>

    <p>
      <%= @post.body %>
    </p>
  </div>

<div class="new-comment">
  <%= render :partial => 'comments/form' %>
</div>

<div class="comments">
  <hr/>
  <%- @post.comments.each do |comment| %>
    <h4><%= comment.author %></h4>
    <p><%= comment.body %></p>
  <%- end %>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
